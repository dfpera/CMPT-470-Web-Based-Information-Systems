<%= form_for ([@account,@note]) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  
  <%= fields_for :tag do |u| %>
      <%= u.label :tag %><br />
      <%= u.text_field :tag_name %>
  <% end %>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>

