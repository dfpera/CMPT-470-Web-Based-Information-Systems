<%= form_for [@account,@note], remote: true, :html => { :role => "noteform" } do |f| %>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>
       
  <div class="form-group">
    <%= f.label :text %><br>
    <%= f.text_area :text, class: "form-control" %>
  </div>
        
  <div class="form-group">
    <%= fields_for :tag do |u| %>
      <%= u.label :tag %><br />
      <%= u.text_field :tag_name, class: "form-control" %>
    <% end %>
  </div>

  <%= f.submit "Submit", class: "btn btn-default pull-left" %>
  
<% end %>
