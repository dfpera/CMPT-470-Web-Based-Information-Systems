<div class="tag" tagid="<%=tag.id%>">
	<div class="panel panel-default tagsBox">
		<div class = "panel-heading"> <!--Tag Title -->
			<div class = "tagtitle">
				<%= tag.tag_name %>
			</div>

			<!-- pinned button -->
			<% if tag.pinned %>
				<%= link_to pin_tag_notes_path(tag.id), method: :patch, remote: true, class: "btn-sm btn-primary" do%>
					<span class="glyphicon glyphicon-pushpin pin<%=tag.id%>" style="color:#149ae8"></span>
				<% end %>
			<% else %>
				<%= link_to pin_tag_notes_path(tag.id), method: :patch, remote: true,class: "btn-sm btn-primary" do%>
					<span class="glyphicon glyphicon-pushpin pin<%=tag.id%>" style="color:grey"></span>
				<% end %>
			<% end if %>

			<div class = "tagButton pull-right">
				<%= link_to '#', remote: true, data: { toggle: 'modal', href: tag_notes_path(tag.id), target: '#delete-confirm' },class: "btn-sm btn-primary" do%>
						<span class="glyphicon glyphicon-remove" style="color:black"></span>
				<%end%>
			</div>

			<div class="row ">
				<div class= "col-xs-12 tagDate">
					Updated: <%= tag.updated_at.in_time_zone("Pacific Time (US & Canada)").strftime("%b %d, %Y, %I:%M %p") %>
				</div>
			</div>
		</div>

		<div class = "panel-body"> <!--Tag Notes -->
			<% tag.notes.each do |note| %>
				<div noteid="<%=note.id%>">
					<%= render note %>
				</div>
			<% end %>
		</div>
	</div>
</div>

