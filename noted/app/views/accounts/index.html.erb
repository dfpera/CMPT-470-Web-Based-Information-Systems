<div class = "container-fluid">
  <div class = "row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <div class="jumbotron">
        <%= image_tag('logo.png', :width => '100%', :alt => "Noted, Logo") %>
        <p>&nbsp;</p>
        <% if flash[:notice] %>
          <div class="panel-body">
            <%= flash[:notice] %>
          </div>
        <% end %>
        <%= form_tag(login_accounts_path, :method => :post) do %>
          <div class="form-group">
            <%= text_field_tag :username, nil, class: "form-control", placeholder: "Username" %>
          </div>
          <div class="form-group">
            <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password" %>
          </div>
          <%= submit_tag "Sign In", class: "btn btn-default pull-right" %>
        <% end %>
        <%= link_to "Sign Up", new_account_path, class: "btn btn-default pull-left"%>
        <div class="clearfix"></div>
      </div>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>
